CompileFlags:
  Add:
    - -std=c++23
    - -stdlib=libc++
    - -Wall
    - -Wextra
    - -Wpedantic
    - -Wno-unused-parameter
  Remove:
    - -std=*

Index:
  Background: Build
  StandardLibrary: Yes

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
  Designators: true
  BlockEnd: true

Hover:
  ShowAKA: true

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict

Completion:
  AllScopes: true
